<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        package="com.aware.plugin.context">

    <!--suppress AndroidDomInspection -->
    <uses-permission tools:node="removeAll"/>
    <uses-permission android:name="com.aware.WRITE_CONTEXT_DATA"/>
    <uses-permission android:name="com.aware.READ_CONTEXT_DATA"/>

    <uses-feature tools:node="removeAll"/>

    <permission
        android:name="com.aware.plugin.context.MANAGE_CONTEXT_DATA"
        android:description="@string/manage_context_data_permission_description"
        android:icon="@drawable/ic_action"
        android:label="@string/manage_context_data_permission_label"
        android:protectionLevel="normal"
        />

    <uses-permission android:name="com.aware.plugin.context.MANAGE_CONTEXT_DATA" />

    <application
            android:allowBackup="true"
            android:label="@string/app_name"
            android:icon="@drawable/ic_action"
            tools:node="replace">

        <service
            android:name=".Plugin"
            android:exported="true"
            android:label="@string/app_name"
            />

        <activity
            android:name="com.aware.plugin.context.Settings"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:label="@string/app_name"
            />

        <service
            android:name="com.aware.context.service.ContextService"
            android:exported="true"
            android:label="@string/app_name"
            android:permission="com.aware.plugin.context.MANAGE_CONTEXT_DATA"
            />

    </application>

</manifest>
